<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/farmerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Farmer Dashboard"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manageCropsButton"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/greenbuttongradient"
        android:text="Manage Crops"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/farmerTitle"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/farmerTitle"
        app:layout_constraintTop_toBottomOf="@id/farmerTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewTasksButton"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/greenbuttongradient"
        android:text="View Farming Tasks"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/manageCropsButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/manageCropsButton"
        app:layout_constraintTop_toBottomOf="@id/manageCropsButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addTaskButton"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/greenbuttongradient"
        android:text="Add New Task"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/viewTasksButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/viewTasksButton"
        app:layout_constraintTop_toBottomOf="@id/viewTasksButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutButton"
        android:layout_width="152dp"
        android:layout_height="57dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/greenbuttongradient"
        android:text="Logout"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/addTaskButton"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/addTaskButton"
        app:layout_constraintTop_toBottomOf="@id/addTaskButton" />


</androidx.constraintlayout.widget.ConstraintLayout>